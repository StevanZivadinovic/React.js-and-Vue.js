<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <%- include("./partials/nav.ejs") %>
    <H2><%= title %></H2>

    <% if (blogs?.length > 0) { %>
        <% blogs.forEach(blog => { %>
            <div class="blog" id="<%= blog.id %>" onclick="getBlogData('<%= blog.id %>')">
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
                <p class="body"><%= blog.blog_body %></p>
            </div>
        <% }) %>
    <% } else { %>
        <p>There are no blogs to display...</p>
    <% } %>
    <%- include("./partials/footer.ejs") %>
     <script>
        const getBlogData = (id)=>{
        fetch('/delete_blog', {
        method: 'DELETE',
        headers: {
      'Content-Type': 'application/json'
        },
        body: JSON.stringify({ id: id })
      }).then((data)=>{
        const deletedBlogItem = document.querySelector(`#${id}`);
        if (deletedBlogItem) {
        deletedBlogItem.remove();
        console.log('Blog deleted from UI successfully');
    }
      }).catch((err)=>{
        console.log(err)
      })
        }
    </script>
</body>
</html>